        app:layoutManager="LinearLayoutManager"
        tools:context="android.example.speelenlees.activities.master.ClientListActivity"
        tools:listitem="@layout/client_list_content"
        android:background="#FFFFFF"/>

    <FrameLayout
        android:id="@+id/client_detail_frame"
